<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="" class="card-img-top" style="width: 100%; height: auto;">
        {% else %}
            <img src="{{ '/images/properties/default.jpg' | imagine_filter('thumb')}}" alt="" class="card-img-top" style="width: 100%; height: auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}"></a>
            {{ property.title | capitalize }}
        </h5>
        <p class="card-text"><span class="font-weight-bold">{{ property.surface | nl2br}} m² </span> - {{ property.city}} ({{ property.postalCode }})</p>
        <p class="card-text">{{ property.address }}</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
            {{ property.formatedPrice }} €
        </div>
    </div>
</div>